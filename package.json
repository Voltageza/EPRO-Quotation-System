{
  "name": "epro-quotation-system",
  "version": "1.0.0",
  "private": true,
  "description": "Solar Quotation & Preliminary Design App for Electrical Pro",
  "workspaces": [
    "server",
    "client"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
    "dev:server": "cd server && npm run dev",
    "dev:client": "cd client && npm run dev",
    "build": "cd client && npm run build",
    "start": "cd server && npm start",
    "migrate": "cd server && npx ts-node src/database/migrate.ts"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}
